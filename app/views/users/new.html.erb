<div class="container">
  <%= simple_form_for :user, url: users_path do |f| %>
    <%= f.input :first_name, error: 'Username is mandatory, please specify one' %>
    <%= f.input :last_name, error: 'Username is mandatory, please specify one' %>
    <%= f.input :email, error: 'Username is mandatory, please specify one' %>
    <%= f.input :password, hint: 'No special characters.' %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>