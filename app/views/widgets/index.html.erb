<div class="container">
  <h1 class="title">Widgets</h1>
  <div class="row">
    <% @widgets&.dig("widgets").each do |widget| %>
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">
            <%= widget&.dig("name") %>
          </h5>
          <p  class="card-text"> <%= widget&.dig("description") %> </p>
        </div>
      </div>
      <br/>
    </div>
    <% end %>
  </div>
</div>
