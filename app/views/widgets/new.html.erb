<%= simple_form_for :widget, url: widgets_path do |f| %>
  <div class="container top">
    <%= f.input :name, input_html: { required: true } %>
    <%= f.input :description, :as => :text, :input_html => { :rows => 7 , :style => 'width: 100%', required: true } %>
    <%= f.input :kind, :collection => %w[visible hidden] %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
